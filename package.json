{
	"name": "@chatsift/ama",
	"description": "Manage AMAs in your community",
	"packageManager": "yarn@3.2.1",
	"private": true,
	"version": "0.0.0",
	"workspaces": [
		"packages/*"
	],
	"author": {
		"name": "DD",
		"email": "didinele.dev@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/chatsift/ama.git"
	},
	"bugs": {
		"url": "https://github.com/chatsift/ama/issues"
	},
	"homepage": "https://github.com/chatsift/ama",
	"scripts": {
		"lint": "turbo run lint && prettier --check .",
		"build": "turbo run build",
		"format": "prettier --write .",
		"prisma": "dotenv -e .env prisma",
		"deploy-commands": "yarn build && dotenv -e .env -v DEPLOY=true -- node --es-module-specifier-resolution=node --enable-source-maps ./packages/bot/dist/index.js",
		"start-bot": "dotenv -e .env -- node --es-module-specifier-resolution=node --enable-source-maps ./packages/bot/dist/index.js",
		"start-api": "dotenv -e .env -- node --es-module-specifier-resolution=node --enable-source-maps ./packages/api/dist/index.js",
		"prepare": "is-ci || husky install",
		"update": "yarn upgrade-interactive"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.7.2",
		"@commitlint/config-angular": "^17.7.0",
		"@typescript-eslint/eslint-plugin": "^6.7.5",
		"@typescript-eslint/parser": "^6.7.5",
		"dotenv-cli": "^7.3.0",
		"eslint": "^8.51.0",
		"eslint-config-neon": "^0.1.57",
		"eslint-plugin-typescript-sort-keys": "^3.0.0",
		"husky": "^8.0.3",
		"is-ci": "^3.0.1",
		"prettier": "^3.0.3",
		"prettier-eslint": "^15.0.1",
		"prisma": "^5.4.2",
		"turbo": "1.10.15",
		"typescript": "^5.2.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.ts": [
			"eslint --fix"
		],
		"*.tsx": [
			"eslint --fix"
		]
	}
}
