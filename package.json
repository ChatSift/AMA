{
  "$schema": "http://json.schemastore.org/package",
  "name": "ama",
  "version": "0.1.0",
  "scripts": {
    "lint": "pnpm recursive run lint --filter @ama/*",
    "lint:ci": "pnpm lint --parallel --filter @ama/*",
    "build": "pnpm recursive run build --filter @ama/*",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GaiusCicereius/ama.git"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "babel-jest": "^26.6.3",
    "babel-plugin-const-enum": "^1.0.1",
    "babel-plugin-replace-ts-export-assignment": "^0.0.2",
    "eslint": "^7.21.0",
    "eslint-config-marine": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "typescript": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ],
    "*.tsx": [
      "eslint --fix"
    ]
  }
}
